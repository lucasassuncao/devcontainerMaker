// Sharing Git Credentials: https://code.visualstudio.com/remote/advancedcontainers/sharing-git-credentials
// Available Dev Container Features: https://containers.dev/features
//
{
  "name": "Ubuntu Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "shutdownAction": "stopContainer",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "false",
      "username": "none",
      "userUid": "automatic",
      "userGid": "automatic",
      "upgradePackages": "false"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "true"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "latest",
      "installTerraformDocs": "true"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "golangciLintVersion": "latest",
      "version": "1.23.3"
    },
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2.1.0": {
      "jqVersion": "latest",
      "yqVersion": "latest"
    },
    "ghcr.io/dhoeric/features/google-cloud-cli:1": {
      "version": "latest",
      "installGkeGcloudAuthPlugin": false
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest"
    },
    "ghcr.io/mpriscella/features/kind:1": {
      "version": "latest"
    },
    "ghcr.io/dhoeric/features/k9s:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "gitlab.gitlab-workflow",
        "golang.go",
        "hashicorp.terraform",
        "markdownlint.markdownlint",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.PowerShell",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "zainchen.json"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "go.inlayHints.functionTypeParameters": true,
        "go.inlayHints.parameterNames": true,
        "go.inlayHints.rangeVariableTypes": true,
        "go.inlayHints.assignVariableTypes": true,
        "go.inlayHints.compositeLiteralFields": true,
        "go.inlayHints.compositeLiteralTypes": true,
        "go.inlayHints.constantValues": true,
        "go.toolsManagement.checkForUpdates": "off",
        "go.useLanguageServer": true,
        "editor.formatOnSave": true,
        "go.lintTool": "golangci-lint",
        "go.lintFlags": [
          "--fast"
        ],
        "go.lintOnSave": "file",
        "goTestExplorer.profiler.showCodeLens": true,
        "go.enableCodeLens": {
          "runtest": true
        },
        "gopls": {
          "build.buildFlags": [],
          "ui.diagnostic.staticcheck": true
        }
      }
    }
  }
}